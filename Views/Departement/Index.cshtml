@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Departement";
}

<div class="card card-primary card-outline">
    <div class="card-header">
        <h5 class="card-title m-0">Departement</h5>
    </div>
    <div class="card-body">
        <button type="button" class="btn btn-primary mb-3" data-toggle="modal" data-target="#createModal">Tambah Data</button>
        <h4>Export File : </h4>
        <table class="table table-striped" id="data-departement">
            <thead>
                <tr>
                    <th>No</th>
                    <th>Id</th>
                    <th>Nama</th>
                    <th>Division ID</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
</div>


@*Modal Create*@
<div class="modal fade" id="createModal" tabindex="-1" aria-labelledby="createModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="createModalLabel">Create Departement</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="card-body">
                    <form class="needs-validation" novalidate>
                        <div class="form-group">
                            <label for="exampleInputDepartement">Nama Departement</label>
                            <input type="text" class="form-control" name="departementName" id="InputNameDepartement" placeholder="Enter departement" required>
                            <div class="invalid-feedback">Please input name departement</div>
                        </div>
                        <div class="form-group">
                            <label>Division</label>
                            <select class="form-control" name="divisionId" id="InputDivisionIdDepartement" required>
                            </select>
                            <div class="invalid-feedback">Please select a valid division</div>
                        </div>
                        <button type="submit" class="btn btn-primary swalDefaultSuccess swalDefaultError" onclick="createDepartement()">Submit</button>
                    </form>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
   </div>


    @*Modal Detail*@
    <div class="modal fade" id="detailModal" tabindex="-1" aria-labelledby="detailModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="detailModalLabel">Detail Departement</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <form class="needs-validation" novalidate>
                    <div class="modal-body">
                        <div class="form-group">
                            <label for="idDepartement">Id Departement</label>
                            <div id="DetailIdDepartement">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="namaDepartement">Nama Departement</label>
                            <div id="DetailNamaDepartement">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="DivisionIdDepartement">Division</label>
                            <div id="DetailDivisionIDDepartement">
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <div id="button-edit"></div>
                        <div id="button-delete"></div>
                    </div>
                </form>
            </div>
        </div>
    </div>
