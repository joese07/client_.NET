@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Division";
}

<div class="card card-primary card-outline">
    <div class="card-header">
        <h5 class="card-title m-0">Division</h5>
    </div>
    <div class="card-body">
        <button type="button" class="btn btn-primary mb-3" data-toggle="modal" data-target="#createModal">Tambah Data</button>
        <h4>Export File : </h4>
        <table class="table table-striped" id="data-divisions">
            <thead>
                <tr>
                    <th>No</th>
                    <th>ID</th>
                    <th>Nama</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody >
            </tbody>
        </table>
    </div>
</div>

@*Modal Create*@
<div class="modal fade" id="createModal" tabindex="-1" aria-labelledby="createModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="createModalLabel">Create Division</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="card-body">
                    <form class="needs-validation" novalidate>
                        <div class="form-group">
                            <label for="exampleInputDivision">Nama Division</label>
                            <input type="text" class="form-control" id="InputNameDivision" placeholder="Enter division" required>
                            <div class="invalid-feedback">Please input name division</div>
                        </div>
                        <div class="mt-2">
                            <button type="button" class="btn btn-primary" onclick="createDivision()">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>


@*Modal Detail*@
<div class="modal fade" id="detailModal" tabindex="-1" aria-labelledby="detailModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="detailModalLabel">Detail Division</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form class="needs-validation" novalidate>
                <div class="modal-body">
                    <div class="form-group">
                        <label for="idDepartement">Id Division</label>
                        <div id="DetailIdDivision">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="namaDepartement">Nama Division</label>
                        <div id="DetailNamaDivision">
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <div id="button-edit"></div>
                    <div id="button-delete"></div>
                </div>
            </form>
        </div>
    </div>
</div>
